<Window x:Class="TestLinqToSqlite2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestLinqToSqlite2"
        mc:Ignorable="d"
        Title="Test LINQ to SQLite 2" ResizeMode="NoResize" SizeToContent="WidthAndHeight" >
    <StackPanel Orientation="Horizontal" Margin="20,10,20,20" >
        <GroupBox Header="基本操作" >
            <StackPanel Width="100" Margin="20" >
                <Button Content="検索" Click="ButtonBasicQuery_Click" />
                <Button Content="削除" Click="ButtonBasicDelete_Click" Margin="0,20,0,0" />
                <Button Content="更新" Click="ButtonBasicUpdate_Click" Margin="0,20,0,0" />
            </StackPanel>
        </GroupBox>
        <GroupBox Header="ジェネリック" Margin="20,0,0,0" >
            <StackPanel Width="100" Margin="20" >
                <Button Content="検索" Click="ButtonGenericQuery_Click" />
            </StackPanel>
        </GroupBox>
    </StackPanel>
</Window>
